<%= form_tag({controller: "senders", action: "create"}, method: "post") do %>
  <%= label_tag(:login, 'Логин') %> </br>
  <%= text_field_tag(:login) %> <br/> <br/>
  <%= label_tag(:password, 'Пароль') %> <br/>
  <%= password_field_tag(:password) %> <br/><br/>
  <%= label_tag(:phone, 'Телефон') %> <br/>
  <%= text_field_tag(:phone) %> <br/><br/>
  <%= label_tag(:message, 'Сообщение') %> <br/>
  <%= text_area_tag(:message) %> <br/><br/>
  <%= submit_tag("Послать") %>
<% end %>

 

